<!--Layout EJS file for common styling across pages-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="http://localhost:3000/css/style.css">
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.6.0/mapbox-gl.js'></script>
    <!--This is the CDN link for mapbox and the necessary css stylesheet to make
    popups and markers work-->
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.6.0/mapbox-gl.css' rel='stylesheet' />
    <title>Places</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand text-uppercase h1" href="http://localhost:3000">Places</a>
          <ul class="navbar">
            <% if (!currentUser) { %>
              <li class="mainli"><a class="btn btn-outline-light" href="/auth/signup">Signup</a></li>
              <li class="mainli"><a class="btn btn-outline-light" href="/auth/login">Login</a></li>
            <% } else { %>
              <li class="mainli"><a class="btn btn-outline-light" href="/main">Home</a></li>
              <li class="mainli"><a class="btn btn-outline-light" href="/profile">View Your Places</a></li>
              <li class="mainli"><a class="btn btn-outline-light" href="/auth/logout">Logout</a></li>
            <% } %>
          </ul>
      </div>
    </nav>
    <%- include('partials/alerts') %>
    <%- body %>
</body>
</html>