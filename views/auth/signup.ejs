<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="../../public/css/style.css">

<div class="container mt-5 userForm">
    <form action="/auth/signup" method="POST">
        <div class="mb-3">
            <h2>Sign-up</h2>
            <label for="new-name" class="form-label">Name</label>
            <input id="new-name" type="text" name="name" class="form-control">

            <label for="new-email" class="form-label">Email</label>
            <input id="new-email" type="email" name="email" class="form-control">
            
            <label for="new-password" class="form-label">Password</label>
            <input id="new-password" type="password" name="password" class="form-control">
            
            <input class="btn btn-primary mt-3" type="submit" value="Sign-up">
        </div>
    </form>
</div>
